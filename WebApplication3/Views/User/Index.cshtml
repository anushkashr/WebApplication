<!-- We're using UserViewModel so passing <UserViewModel> -->
@model IEnumerable<UserViewModel>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Manage User</h2>
        </div>

        <div class="col-md-4">
            <a style="margin-top:15px" class="btn btn-primary pull-right" asp-controller="User" asp-action="CreateUser">Create New User</a>
        </div>
    </div>
    <hr style="border:1px solid" />

