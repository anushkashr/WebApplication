@*@model IEnumerable<UserWithRole>*@ <!--because we are now making filter static-->
@*@model UserViewModel*@
@model UserMasterDataVM

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Manage User</h2>
        </div>

        <div class="col-md-4">
            <a style="margin-top:15px" class="btn btn-primary pull-right" asp-controller="User" asp-action="CreateUser">Create New User</a>
        </div>
    </div>
    <hr style="border:1px solid" />

    <form>
        <div class="row">
            <div class="col-md-5">
                <div class="form-group">
                    <label class="control-label col-md-2" style="padding-top:5px">Email</label>
                    <div class="col-md-8">
                        <input type="text" asp-for="Email" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label class="control-label" style="padding-top:5px">Role</label>
                    <div class="col-md-8">
                        
                        <select class="form-control" asp-for="RoleId" asp-items="Model.UserRoles">
                            @*<option>Select</option>
                            <option value="1">Checker</option>
                            <option value="3">Admin</option>
                            <option value="4">Maker</option>
                            <option value="5">Normal User</option>*@
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group pull-left">
                    <input type="submit" class="btn btn-info" value="Search" />
                    <a asp-action="Index" class="btn btn-danger">Reset</a>
                </div>
            </div>
        </div>
    </form>
 
 

    <div class="row">
        <table class="table table-bordered table-striped">
            <thead style="font-weight:bold; background-color:lightgray" >
                <tr>
                    <td>User ID</td>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Email</td>
                    <td>Role ID</td>
                    <td>Role Name</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users) //UserViewModel is entirely one model and in it we are using Users
                {
                    <tr>
                        <td>@item.UserId</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.RoleID</td>
                        <td>@item.RoleName</td>  @*with UserWithRole we can directly access RoleName*@
                        @*<td>@item.UserRole.RoleName</td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




