<h1>State Management</h1>

<hr style="border:1px solid" />

<div class="container">
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead style="font-weight:bold; background-color:lightgray">
                <tr>
                    <td>RoleId</td>
                    <td>RoleName</td>
                    <td>RoleDesc</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in ViewBag.UserRole)
                {
                    <tr>
                        <td>@item.RoleID</td>
                        <td>@item.RoleName</td>
                        <td>@item.RoleDesc</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <p>@ViewBag.SingleUserRole.RoleName</p>
        </div>
    </div>
</div>