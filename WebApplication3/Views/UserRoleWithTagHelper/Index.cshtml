@model IEnumerable<WebApplication3.Models.UserRole>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h3>User Role List With Tag Helper</h3>
        </div>

        <div class="col-md-4">
            <a style="margin-top:15px" class="btn btn-primary pull-right" asp-controller="UserRoleWithTagHelper" asp-action="CreateRole">Create New</a>
        </div>
    </div>



    <hr style="border:1px solid" />
    <div class="row">

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Rolde Id</th>
                <th>Rolde Name</th>
                <th>Role Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RoleID</td>
                            <td>@item.RoleName</td>
                            <td>@item.RoleDesc</td>
                            <td>
                                <a asp-controller="UserRoleWithTagHelper" asp-action="EditRole" asp-route-roleID="@item.RoleID">Edit</a>
                            </td>
                        <td>
                            <a asp-controller="UserRoleWithTagHelper" asp-action="DeleteRole">Delete</a>
                        </td>
                        </tr>
                        
                    }   
        </tbody>
    </table>

    </div>
</div>
