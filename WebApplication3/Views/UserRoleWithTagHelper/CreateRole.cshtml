@model WebApplication3.Models.UserRole

<div class="container">
    <h3>Create Role with Tag Helper</h3>
    <hr style="border:1px solid" />

    <form asp-action="SaveRole" method="post">
        <div class="col-md-6">
            <div class="row">
                <div class="form-group">
                    <label class="control-label" asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label class="control-label" asp-for="RoleDesc"></label>
                    <input asp-for="RoleDesc" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>

